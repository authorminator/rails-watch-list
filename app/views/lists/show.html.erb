<div class="w-50 mx-auto m-5">
  <h1 class="mt-5"><%= @list.name %> !!! </h1>
  <% if @bookmarks.any? %>
    <% @bookmarks.each do |bookmark| %>
      <div class="card mb-4">
        <div class="card-img m-3">
          <% unless @list.photo.key.nil? %>
            <%= cl_image_tag @list.photo.key, width: 400, height: 300, crop: :fill %>
          <% end %>
        </div>
        <div class="card-body bg-light">
          <blockquote class="blockquote">
            <p>
              <%= bookmark.movie.title %>
            </p>
            <footer class="blockquote-footer">
              <%= bookmark.comment %>
            </footer>
          </blockquote>
          <div>
            <h3><i class="fa-regular fa-rectangle-xmark"></i></h3>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card mb-4">
      <div class="card-body bg-light">
        <p class="card-text">
          <%= "(Empty)" %>
        </p>
      </div>
    </div>
  <% end %>
  <%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
</div>
